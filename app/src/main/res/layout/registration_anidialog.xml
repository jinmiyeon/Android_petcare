<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:fontFamily="@font/fonttext"
                android:id="@+id/aninametext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:fontFamily="@font/fonttext"
                android:id="@+id/aninameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/outline"
                android:padding="5dp"
                android:hint="구름이"
                />

            <TextView
                android:fontFamily="@font/fonttext"
                android:id="@+id/anikindtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개체"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <EditText
                android:fontFamily="@font/fonttext"
                android:id="@+id/anikindedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/outline"
                android:padding="5dp"
                android:hint="강아지/말티즈"

                />



            <TextView
                android:fontFamily="@font/fonttext"
                android:id="@+id/anisextext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:fontFamily="@font/fonttext"
                android:id="@+id/anisexedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/outline"
                android:padding="5dp"
                android:hint="여/중성화"/>
            <TextView
                android:fontFamily="@font/fonttext"
                android:id="@+id/aniagetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <EditText
                android:fontFamily="@font/fonttext"
                android:id="@+id/aniageedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/outline"
                android:padding="5dp"
                android:hint="YYYY-MM-DD"
                />
            <TextView
                android:fontFamily="@font/fonttext"
                android:id="@+id/animemotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="특이사항"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:fontFamily="@font/fonttext"
                android:id="@+id/animemoedit"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@drawable/outline"
                android:ems="10"
                android:hint="알러지 여부 및 증상이 있다면 \n기재해 주세요."
                android:inputType="textPersonName"
                android:padding="5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>